Algoritmo dia_semana
	Definir n Como Entero
	Escribir "Digita un numero del 1 al 7 para ver que dia es";
	Leer n;
	Segun n Hacer
		1:
			Escribir"Lunes";
		2:
			Escribir"Martes";
		3:
			Escribir"Miercoles";
		4:
			Escribir"Jueves";
		5:
			Escribir "Viernes";
		6:
			Escribir"Sabado";
		7:
			Escribir"Domingo";
			
		De Otro Modo:
			Escribir"Numero no valido";
	Fin Segun
	
FinAlgoritmo
