	Escribir"Este porgrama calcula el area y perimetro de un rectangulo";
	Escribir"Escribe la base";
	leer base;
	Escribir"Escribe la altura: ";
	Leer lado;
	perimetro<- (2*base)+(2*lado);
	area<- base*lado;
